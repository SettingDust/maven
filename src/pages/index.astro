  <script is:inline define:vars={{ tree: treeJson, baseUrl, repositoryUrl, siteName: siteNameJson }}>
    // Parse tree data
    const treeData = JSON.parse(tree);
    const repositoryName = JSON.parse(siteName);
    let currentPath = [];
    let currentNode = treeData;
    let selectedArtifact = null;

    // Initialize from URL hash
    function initFromHash() {
      const hash = window.location.hash.slice(1);
      if (hash) {
        currentPath = hash.split('/').filter(Boolean);
        navigateToPath(currentPath);
      } else {
        renderBrowser();
      }
    }

    // Navigate to a path
    function navigateToPath(pathArray) {
      currentNode = treeData;
      currentPath = [];
      
      for (const part of pathArray) {
        const child = currentNode.children?.find(c => c.name === part);
        if (child) {
          currentPath.push(part);
          currentNode = child;
        } else {
          break;
        }
      }
      
      renderBrowser();
      updateBreadcrumb();
      
      // Update artifact card if we're at an artifact
      if (currentNode.type === 'artifact') {
        selectedArtifact = currentNode;
        updateArtifactCard();
      } else {
        selectedArtifact = null;
        resetArtifactCard();
      }
    }

    // Render browser list
    function renderBrowser() {
      const browserList = document.getElementById('browser-list');
      if (!browserList) return;
      
      const items = currentNode.children || [];
      
      // Check if current node is a version node
      const isVersionNode = currentNode.type === 'version';
      
      if (items.length === 0 && !isVersionNode) {
        browserList.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üì≠</div>
            <p>No items found</p>
          </div>
        `;
        return;
      }
      
      let html = '<div class="browser-list">';
      
      // If current node is a version, show files in that version directory
      if (isVersionNode && currentNode.files) {
        const versionPath = `${currentNode.groupId.replace(/\./g, '/')}/${currentNode.artifactId}/${currentNode.name}`;
        const versionUrl = `${baseUrl}repository/${versionPath}/`;
        
        currentNode.files.forEach(file => {
          // Format file size
          let sizeStr = '';
          if (file.size < 1024) {
            sizeStr = file.size + ' B';
          } else if (file.size < 1024 * 1024) {
            sizeStr = (file.size / 1024).toFixed(2) + ' kB';
          } else {
            sizeStr = (file.size / (1024 * 1024)).toFixed(2) + ' MB';
          }
          
          html += `
            <a href="${versionUrl}${file.name}" class="file-link" target="_blank">
              <div class="browser-entry">
                <div class="file-info">
                  <div class="default-icon">‚ö™</div>
                  <div class="default-filename">${file.name}</div>
                </div>
                <div class="entry-details">${sizeStr}</div>
              </div>
            </a>
          `;
        });
      } else {
        // Show child items (directories/artifacts/versions)
        items.forEach(item => {
          if (item.type === 'artifact') {
            html += `
              <div class="browser-entry" data-path="${item.path}">
                <div class="file-info">
                  <div class="default-icon">‚ö´</div>
                  <div class="default-filename">${item.name}</div>
                </div>
                <div class="entry-details">${item.versions?.length || 0} versions</div>
              </div>
            `;
          } else if (item.type === 'version') {
            html += `
              <div class="browser-entry" data-path="${item.path}">
                <div class="file-info">
                  <div class="default-icon">‚ö´</div>
                  <div class="default-filename">${item.name}</div>
                </div>
                <div class="entry-details"></div>
              </div>
            `;
          } else {
            html += `
              <div class="browser-entry" data-path="${item.path}">
                <div class="file-info">
                  <div class="default-icon">‚ö´</div>
                  <div class="default-filename">${item.name}</div>
                </div>
                <div class="entry-details"></div>
              </div>
            `;
          }
        });
      }
      
      html += '</div>';
      browserList.innerHTML = html;
      
      // Add click handlers (only for non-link entries)
      browserList.querySelectorAll('.browser-entry[data-path]').forEach(entry => {
        entry.addEventListener('click', () => {
          const path = entry.getAttribute('data-path');
          window.location.hash = path;
        });
      });
    }

    // Update breadcrumb
    function updateBreadcrumb() {
      const breadcrumb = document.getElementById('breadcrumb');
      if (!breadcrumb) return;
      
      let html = '<span class="breadcrumb-label">Index of </span>';
      html += '<a href="#" class="breadcrumb-link">/</a>';
      
      let accPath = '';
      currentPath.forEach((part) => {
        accPath += (accPath ? '/' : '') + part;
        html += `<a href="#${accPath}" class="breadcrumb-link">${part}/</a>`;
      });
      
      breadcrumb.innerHTML = html;
    }

    // Update artifact card with selected artifact info
    function updateArtifactCard() {
      if (!selectedArtifact) return;
      
      const titleElement = document.querySelector('.card-title span:first-child');
      if (titleElement) {
        titleElement.textContent = 'Artifact details';
      }
      
      updateCodeBlock();
    }

    // Reset artifact card to repository info
    function resetArtifactCard() {
      const titleElement = document.querySelector('.card-title span:first-child');
      if (titleElement) {
        titleElement.textContent = repositoryName;
      }
      
      updateCodeBlock();
    }

    // Update code block based on active tab and selected artifact
    function updateCodeBlock() {
      const activeTab = document.querySelector('.card-tab.active');
      if (!activeTab) return;
      
      const tabName = activeTab.textContent.trim();
      const codeBlock = document.querySelector('.code-block pre');
      if (!codeBlock) return;
      
      let code = '';
      
      if (selectedArtifact) {
        // Show artifact dependency
        if (tabName === 'Maven') {
          code = `<span class="tag">&lt;dependency&gt;</span>
  <span class="tag">&lt;groupId&gt;</span>${selectedArtifact.groupId}<span class="tag">&lt;/groupId&gt;</span>
  <span class="tag">&lt;artifactId&gt;</span>${selectedArtifact.artifactId}<span class="tag">&lt;/artifactId&gt;</span>
  <span class="tag">&lt;version&gt;</span>${selectedArtifact.versions[0]}<span class="tag">&lt;/version&gt;</span>
<span class="tag">&lt;/dependency&gt;</span>`;
        } else if (tabName === 'Gradle Kotlin') {
          code = `<span class="function">implementation</span>(<span class="string">"${selectedArtifact.groupId}:${selectedArtifact.artifactId}:${selectedArtifact.versions[0]}"</span>)`;
        } else if (tabName === 'Gradle Groovy') {
          code = `<span class="function">implementation</span> <span class="string">'${selectedArtifact.groupId}:${selectedArtifact.artifactId}:${selectedArtifact.versions[0]}'</span>`;
        }
      } else {
        // Show repository configuration
        if (tabName === 'Maven') {
          code = `<span class="tag">&lt;repository&gt;</span>
  <span class="tag">&lt;id&gt;</span>${repositoryName.toLowerCase().replace(/\s+/g, '-')}<span class="tag">&lt;/id&gt;</span>
  <span class="tag">&lt;name&gt;</span>${repositoryName}<span class="tag">&lt;/name&gt;</span>
  <span class="tag">&lt;url&gt;</span>${repositoryUrl}<span class="tag">&lt;/url&gt;</span>
<span class="tag">&lt;/repository&gt;</span>`;
        } else if (tabName === 'Gradle Kotlin') {
          code = `<span class="function">maven</span>(<span class="string">"${repositoryUrl}"</span>) {
  name = <span class="string">"${repositoryName}"</span>
}`;
        } else if (tabName === 'Gradle Groovy') {
          code = `<span class="function">maven</span>(<span class="string">"${repositoryUrl}"</span>) {
  name <span class="string">"${repositoryName}"</span>
}`;
        }
      }
      
      codeBlock.innerHTML = code;
    }

    // Tab switching
    function setupTabs() {
      document.querySelectorAll('.card-tab').forEach(tab => {
        tab.addEventListener('click', () => {
          document.querySelectorAll('.card-tab').forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          updateCodeBlock();
        });
      });
    }

    // Handle hash changes
    window.addEventListener('hashchange', () => {
      const hash = window.location.hash.slice(1);
      const pathArray = hash.split('/').filter(Boolean);
      navigateToPath(pathArray);
    });

    // Initialize
    window.addEventListener('DOMContentLoaded', () => {
      setupTabs();
      updateCodeBlock(); // Á´ãÂç≥Ê∏≤ÊüìÂàùÂßã‰ª£Á†ÅÂùó
      initFromHash();
    });
  </script>

  <div class="breadcrumb-section">
    <div class="container">
      <p id="breadcrumb" class="breadcrumb">
        <span class="breadcrumb-label">Index of </span>
        <a href="#" class="breadcrumb-link">/</a>
      </p>
    </div>
  </div>

  <div class="content">
    <div class="container">
      <div class="main-layout">
        <!-- Â∑¶‰æßÊñá‰ª∂ÊµèËßàÂô® -->
        <div class="browser-section">
          <div id="browser-list">
            <!-- Content will be dynamically generated -->
          </div>
        </div>

        <!-- Âè≥‰æß‰æùËµñ‰ø°ÊÅØÂç°Áâá -->
        <aside class="artifact-card">
          <div class="card-title">
            <span>Repository details</span>
            <span style="cursor: pointer;">üìã</span>
          </div>
          
          <div class="card-tabs">
            <div class="card-tab active">Maven</div>
            <div class="card-tab">Gradle Kotlin</div>
            <div class="card-tab">Gradle Groovy</div>
          </div>

