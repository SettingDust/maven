import Layout from '../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

interface Artifact {
  groupId: string;
  artifactId: string;
  versions: string[];
  latestVersion: string;
  path: string;
  versionFiles?: Map<string, {name: string; size: number}[]>;
}

// Scan the repository directory to discover Maven artifacts
function scanMavenRepository(baseDir: string): Artifact[] {
  const artifacts: Artifact[] = [];
  
  try {
    if (!fs.existsSync(baseDir)) {
      return artifacts;
    }

    function scanDirectory(dir: string, groupPath: string = '') {
      const items = fs.readdirSync(dir, { withFileTypes: true });
      
      for (const item of items) {
        if (item.isDirectory()) {
          const currentPath = path.join(dir, item.name);
          const newGroupPath = groupPath ? `${groupPath}.${item.name}` : item.name;
          
          // Check if this directory contains version directories (with .pom files)
          const subItems = fs.readdirSync(currentPath, { withFileTypes: true });
          const versionDirs = subItems.filter(sub => {
            if (!sub.isDirectory()) return false;
            const versionPath = path.join(currentPath, sub.name);
            try {
              const pomFiles = fs.readdirSync(versionPath).filter(f => f.endsWith('.pom'));
              return pomFiles.length > 0;
            } catch {
              return false;
            }
          });

          if (versionDirs.length > 0) {
            // This is an artifactId directory
            const versions = versionDirs.map(v => v.name).sort().reverse();
            const relativePath = path.relative(baseDir, currentPath).replace(/\\/g, '/');
            
            // Scan files in each version directory
            const versionFiles = new Map<string, {name: string; size: number}[]>();
            versionDirs.forEach(versionDir => {
              const versionPath = path.join(currentPath, versionDir.name);
              try {
                const files = fs.readdirSync(versionPath, { withFileTypes: true })
                  .filter(f => f.isFile())
                  .map(f => {
                    const filePath = path.join(versionPath, f.name);
                    const stats = fs.statSync(filePath);
                    return {
                      name: f.name,
                      size: stats.size
                    };
                  })
                  .sort((a, b) => {
                    // Sort files by type priority, then alphabetically
                    const getPriority = (name: string) => {
                      if (name.endsWith('.pom')) return 1;
                      if (name.endsWith('.jar') && !name.includes('-sources') && !name.includes('-javadoc')) return 2;
                      if (name.includes('-sources.jar')) return 3;
                      if (name.includes('-javadoc.jar')) return 4;
                      if (name.endsWith('.sha1')) return 5;
                      if (name.endsWith('.md5')) return 6;
                      return 7;
                    };
                    const priorityDiff = getPriority(a.name) - getPriority(b.name);
                    if (priorityDiff !== 0) return priorityDiff;
                    return a.name.localeCompare(b.name);
                  });
                versionFiles.set(versionDir.name, files);
              } catch (error) {
                console.error(`Error reading version directory ${versionPath}:`, error);
              }
            });
            
            artifacts.push({
              groupId: groupPath,
              artifactId: item.name,
              versions: versions,
              latestVersion: versions[0],
              path: relativePath,
              versionFiles: versionFiles
            });
          } else {
            // Continue scanning deeper
            scanDirectory(currentPath, newGroupPath);
          }
        }
      }
    }

    scanDirectory(baseDir);
  } catch (error) {
    console.error('Error scanning repository:', error);
  }

  return artifacts;
}

const repositoryPath = path.join(process.cwd(), 'repository');
const artifacts = scanMavenRepository(repositoryPath);
const baseUrl = import.meta.env.BASE_URL || '/';
const siteUrl = import.meta.env.SITE || 'https://example.github.io/';

// Build complete repository URL with base path
const repositoryUrl = `${siteUrl}${baseUrl !== '/' ? baseUrl : ''}repository/`.replace(/\/\//g, '/').replace(/:\//, '://');

const { title = 'SettingDust\'s Maven', siteName = 'SettingDust\'s Maven' } = Astro.props;

// Build a directory tree structure
interface TreeNode {
  name: string;
  type: 'dir' | 'artifact' | 'version';
  path: string;
  children?: TreeNode[];
  versions?: string[];
  groupId?: string;
  artifactId?: string;
  files?: {name: string; size: number}[];
}

function buildTree(): TreeNode {
  const root: TreeNode = { name: 'repository', type: 'dir', path: '', children: [] };
  
  artifacts.forEach(artifact => {
    const parts = artifact.groupId.split('.');
    parts.push(artifact.artifactId);
    
    let current = root;
    let currentPath = '';
    
    // Build group path
    for (let i = 0; i < parts.length - 1; i++) {
      currentPath = currentPath ? `${currentPath}/${parts[i]}` : parts[i];
      let child = current.children?.find(c => c.name === parts[i]);
      if (!child) {
        child = { name: parts[i], type: 'dir', path: currentPath, children: [] };
        current.children!.push(child);
      }
      current = child;
    }
    
    // Add artifact
    const artifactName = parts[parts.length - 1];
    currentPath = `${currentPath}/${artifactName}`;
    const artifactNode: TreeNode = {
      name: artifactName,
      type: 'artifact',
      path: currentPath,
      versions: artifact.versions,
      groupId: artifact.groupId,
      artifactId: artifact.artifactId,
      children: []
    };
    
    // Add version nodes as children
    artifact.versions.forEach(version => {
      const versionPath = `${currentPath}/${version}`;
      const files = artifact.versionFiles?.get(version) || [];
      artifactNode.children!.push({
        name: version,
        type: 'version',
        path: versionPath,
        groupId: artifact.groupId,
        artifactId: artifact.artifactId,
        files: files
      });
    });
    
    current.children!.push(artifactNode);
  });
  
  return root;
}

const tree = buildTree();
const treeJson = JSON.stringify(tree);
const siteNameJson = JSON.stringify(siteName);
