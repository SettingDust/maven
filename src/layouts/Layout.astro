---
import { execSync } from 'child_process';

interface Props {
  title?: string;
  siteName?: string;
}

const { title = 'SettingDust\'s Maven', siteName = 'SettingDust\'s Maven' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';
const faviconUrl = `${baseUrl}favicon.svg`.replace(/\/\//g, '/');

// Extract GitHub repo from site URL
const siteUrl = import.meta.env.SITE || 'https://settingdust.github.io/';
let githubRepo = '';
try {
  const url = new URL(siteUrl);
  const match = url.hostname.match(/^([^\.]+)\.github\.io$/);
  if (match) {
    const username = match[1];
    const repoName = baseUrl.split('/').filter(Boolean)[0] || 'github-maven';
    githubRepo = `https://github.com/${username}/${repoName}`;
  }
} catch {}

// Get current commit info
let commitHash = '';
let commitShort = '';
try {
  commitHash = execSync('git rev-parse HEAD', { encoding: 'utf-8' }).trim();
  commitShort = execSync('git rev-parse --short HEAD', { encoding: 'utf-8' }).trim();
} catch {
  // Fallback to environment variable in CI
  commitHash = process.env.GITHUB_SHA || '';
  commitShort = commitHash.slice(0, 7);
}
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={faviconUrl}>
</head>
<body>
    <header class="site-header">
        <div class="header-container">
            <a href={baseUrl} class="logo-link">
                <img src={faviconUrl} alt={siteName} class="logo">
                <span class="site-title">{siteName}</span>
            </a>
            <div class="header-links">
                {commitShort && (
                    <a href={githubRepo ? `${githubRepo}/commit/${commitHash}` : '#'} 
                       class="commit-link" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       title={`Commit: ${commitHash}`}>
                        <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M11.93 8.5a4.002 4.002 0 0 1-7.86 0H.75a.75.75 0 0 1 0-1.5h3.32a4.002 4.002 0 0 1 7.86 0h3.32a.75.75 0 0 1 0 1.5h-3.32ZM8 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"></path>
                        </svg>
                        {commitShort}
                    </a>
                )}
                {githubRepo && (
                    <a href={githubRepo} class="github-link" target="_blank" rel="noopener noreferrer">
                        <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
                        </svg>
                        GitHub
                    </a>
                )}
            </div>
        </div>
    </header>
    <slot />
</body>
</html>

<style is:global>
    .site-header {
        background: #ffffff;
        border-bottom: 1px solid #e5e7eb;
        padding: 12px 24px;
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .header-links {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .commit-link,
    .github-link {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 14px;
        color: #666;
        text-decoration: none;
        transition: all 0.2s;
        border: 1px solid #e5e7eb;
    }

    .commit-link:hover,
    .github-link:hover {
        color: #333;
        background: #f9fafb;
        border-color: #d1d5db;
    }

    .commit-link svg {
        opacity: 0.7;
    }

    .logo-link {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        transition: opacity 0.2s;
    }

    .logo-link:hover {
        opacity: 0.8;
    }

    .logo {
        width: 36px;
        height: 36px;
        display: block;
    }

    .site-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
    }
</style>
